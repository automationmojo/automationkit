
#!/bin/bash

# -------------------------------------------------------------------------------------------
#                                 Setup all the Variables and Paths
# -------------------------------------------------------------------------------------------
echo "------------------------------------ VARIABLES ----------------------------------------"

# Establish the base repository reference directory
THIS_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
REPOSITORY_DIR="$( dirname $THIS_DIR )"
DOCS_DIR="$REPOSITORY_DIR/docs"

echo "THIS_DIR=$THIS_DIR"
echo "REPOSITORY_DIR=$REPOSITORY_DIR"
echo "DOCS_DIR=$DOCS_DIR"

ssh root@dimension.systems "mkdir -p /var/www/automationmojo.com/automationkit/docs"

scp -r "$DOCS_DIR" root@dimension.systems:/var/www/automationmojo.com/automationkit
