{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Reset Environment",
            "type": "shell",
            "command": "${workspaceFolder}/deployment/setup-environment",
            "problemMatcher": []
        },
        {
            "label": "Test Result Server",
            "type": "shell",
            "options": {
                "cwd": "${env:HOME}/aresults"
            },
            "command": "${workspaceFolder}/_local/venv/bin/python -m http.server 8000",
            "problemMatcher": []
        },
        {
            "label": "Documentation Server",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/docs/dirhtml"
            },
            "command": "${workspaceFolder}/_local/venv/bin/python -m http.server 8001",
            "args": [
                "-m",
                "http.server"
            ],
            "problemMatcher": []
        }
    ]
}