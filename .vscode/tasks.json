{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean - Trailing Whitespace (Packages)",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/packages"
            },
            "command": "find",
            "args": [
                ".",
                "-type",
                "f",
                "-name",
                "*.py",
                "-exec",
                "sed",
                "--in-place",
                "'s/[[:space:]]\\{1,\\}$//'",
                "{}",
                "\\+"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build - Pylint Packages",
            "type": "shell",
            "options": {
                "cwd": "${env:HOME}/akit/results/pylint"
            },
            "command": "${workspaceFolder}/.venv/bin/pylint",
            "args": [
                "--rcfile=${workspaceFolder}/integration/linting/pylint-packages.rc",
                "${workspaceFolder}/packages/akit",
                ">",
                "${env:HOME}/akit/results/pylint/linting-errors.txt"
            ],
            "problemMatcher": []
        },
        {
            "label": "Environment - Reset",
            "type": "shell",
            "command": "${workspaceFolder}/deployment/setup-environment reset",
            "problemMatcher": []
        },
        {
            "label": "Environment - Setup",
            "type": "shell",
            "command": "${workspaceFolder}/deployment/setup-environment",
            "problemMatcher": []
        },
        {
            "label": "Test Result Server",
            "type": "shell",
            "options": {
                "cwd": "${env:HOME}/akit/results"
            },
            "command": "${workspaceFolder}/.venv/bin/python -m http.server 8000",
            "problemMatcher": []
        },
        {
            "label": "Documentation Server",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/docs/dirhtml"
            },
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "-m",
                "http.server",
                "8001"
            ],
            "problemMatcher": []
        }
    ]
}